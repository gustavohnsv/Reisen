<div class="container mt-4">
  <h1 class="mb-4 text-center">Notícias de Turismo</h1>

  <% country_names = ISO3166::Country.all_translated('pt-BR').map { |name, _code| name }.sort %>

  <form method="get" action="/news" class="mb-3 text-center">
    <%= select_tag :location,
                   options_for_select(country_names, params[:location]),
                   include_blank: 'Selecione um país ou digite um local...',
                   class: 'form-control d-inline w-50',
                   data: { controller: 'tom-select' } %>

    <button type="submit" class="btn btn-success">Buscar</button>
  </form>

  <% if @news.present? %>
    <div class="row">
      <% @news.each do |article| %>
        <div class="col-md-6 col-lg-4 mb-4 noticia">
          <div class="card h-100 shadow-sm border-0">
            <div class="card-body">
              <h5 class="card-title noticia-titulo"><%= article[:title] %></h5>
              <p class="card-text text-muted small noticia-data"><%= article[:pubDate] %></p>

              <a href="<%= article[:link] %>" target="_blank" class="btn btn-sm btn-primary noticia-link">Ler mais</a>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-center text-muted">Nenhuma notícia encontrada.</p>
  <% end %>
</div>