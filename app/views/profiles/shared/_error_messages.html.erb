  <div id="error_explanation" class="alert alert-danger">
    <h2><%= pluralize(object.errors.count, "erro") %> impediram que o recurso fosse salvo:</h2>
    <ul>
      <% object.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
