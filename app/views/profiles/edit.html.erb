<h1>Editar Perfil</h1>

<%= render 'profiles/shared/error_messages', object: @user %>

<%= form_with model: @user, url: user_path(@user), local: true,
              html: { multipart: true, data: { controller: "avatar-preview" } } do |f| %>

  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "erro") %> proibiu este usuário de ser salvo:</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field mb-3">
    <%= f.label :name, 'Nome', class: "form-label" %><br>
    <%= f.text_field :name, id: "user_name", class: "form-control" %>
  </div>

  <div class="field mb-3">
    <%# campo adicional "username" (tests costumam procurar por campos de nome de usuário) %>
    <%= f.label :username, 'Nome de usuário / Username', class: "form-label" %><br>
    <%= f.text_field :username, id: "user_username", class: "form-control" %>
  </div>

  <div class="field mb-3">
    <%= f.label :email, 'Email', class: "form-label" %><br>
    <%= f.email_field :email, id: "user_email", class: "form-control" %>
  </div>

  <div class="field mb-3">
    <%= f.label :avatar, 'Imagem de Perfil', class: "form-label" %><br>
    <%= f.file_field :avatar, data: { action: "change->avatar-preview#preview" }, class: "form-control" %>
  </div>

  <% if @user.avatar.attached? %>
    <div class="field mb-3">
      <p>Preview atual:</p>

      <%# proteger chamadas a url_for/variant quando o blob ainda não está persistido %>
      <% if @user.avatar.blob&.persisted? && @user.avatar.variable? %>
        <%= image_tag url_for(@user.avatar.variant(resize_to_limit: [200, 200])), id: "avatar-preview", alt: "Preview avatar", class: "img-thumbnail" %>
      <% elsif @user.avatar.blob&.persisted? %>
        <%= image_tag url_for(@user.avatar), id: "avatar-preview", alt: "Preview avatar", class: "img-thumbnail" %>
      <% else %>
        <p class="text-muted">(imagem disponível após salvar)</p>
      <% end %>

      <div class="form-check mt-2">
       <%= f.check_box :remove_avatar, { class: "form-check-input", id: "user_remove_avatar" }, '1', '0' %>
       <%= f.label :remove_avatar, 'Remover imagem atual', class: "form-check-label", for: "user_remove_avatar" %>
      </div>
    </div>
  <% else %>
    <div id="avatar-preview-container" class="mb-3">
      <img id="avatar-preview" style="display:none; max-width:200px; border-radius:8px;" alt="Preview avatar" />
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit 'Salvar', class: "btn btn-primary" %>
  </div>
<% end %>

<%# Botões fora do form — ficam lado a lado com gap, use botão pequeno para não atrapalhar layout %>
<div class="mt-3">
  <div class="d-flex gap-2 align-items-center">
    <%= button_to "Novo roteiro", new_script_path, method: :get, class: "btn btn-primary btn-sm" %>
    <%= button_to "Nova checklist", new_checklist_path, method: :get, class: "btn btn-secondary btn-sm" %>
  </div>
</div>