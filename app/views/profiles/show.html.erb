<h1> Logado como: <%=  @user.name %> </h1>
<span> Atualmente na p√°gina: profiles#show </span>
<% if @user.avatar.attached? %>
  <div class="profile-avatar">
    <%# Show the original blob; variants may require image_processing gem in the environment %>
    <%= image_tag url_for(@user.avatar), alt: "Avatar de "+@user.name %>
  </div>
<% end %>
<%= button_to "Novo roteiro", new_script_path, method: :get %>
<%= button_to "Nova checklist", new_checklist_path, method: :get %>
<% unless @scripts.nil? %>
  <div style="display: flex; flex-direction: column">
  <% @scripts&.each do |s| %>
    <%= link_to s.title, script_path(s.id), method: :get %>
  <% end %>
  </div>
<% end %>
<% if user_signed_in? %>
  <%= button_to "Sair (Logout)", destroy_user_session_path, method: :delete, data: { confirm: "Are you sure?" } %>
<% end %>
